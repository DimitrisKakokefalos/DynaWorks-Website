<div id="cookie-banner" class="cookie-banner" style="display: none;">
    <div class="cookie-content">
        <p>Χρησιμοποιούμε cookies για να βελτιώσουμε την εμπειρία σας. 
        <a href="/privacy">Μάθετε περισσότερα</a></p>
        <div class="cookie-buttons">
            <button id="accept-cookies" class="btn btn-primary">Αποδοχή</button>
            <button id="reject-cookies" class="btn btn-secondary">Απόρριψη</button>
        </div>
    </div>
</div>

<script>
(function() {
    const banner = document.getElementById('cookie-banner');
    const accepted = localStorage.getItem('cookiesAccepted');
    
    if (!accepted) {
        banner.style.display = 'flex';
    }
    
    document.getElementById('accept-cookies').addEventListener('click', function() {
        localStorage.setItem('cookiesAccepted', 'true');
        banner.style.display = 'none';
    });
    
    document.getElementById('reject-cookies').addEventListener('click', function() {
        localStorage.setItem('cookiesAccepted', 'false');
        banner.style.display = 'none';
    });
})();
</script>
